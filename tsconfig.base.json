{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DangerPrep Base TypeScript Config",
  "extends": "@dangerprep/typescript-config/base.json",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "ES2022.Error"],
    "module": "Node16",
    "moduleResolution": "Node16",
    
    // Module System
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    
    // Type Checking - Strict Mode
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Type Checking - Advanced
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    
    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    
    // Interop Constraints
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    
    // Completeness
    "skipDefaultLibCheck": true,
    
    // Path Mapping for Workspaces
    "baseUrl": ".",
    "paths": {
      "@dangerprep/cli": ["./cli/src"],
      "@dangerprep/cli/*": ["./cli/src/*"],
      "@dangerprep/kiwix-sync": ["./docker/sync/kiwix-sync/src"],
      "@dangerprep/kiwix-sync/*": ["./docker/sync/kiwix-sync/src/*"],
      "@dangerprep/nfs-sync": ["./docker/sync/nfs-sync/src"],
      "@dangerprep/nfs-sync/*": ["./docker/sync/nfs-sync/src/*"],
      "@dangerprep/offline-sync": ["./docker/sync/offline-sync/src"],
      "@dangerprep/offline-sync/*": ["./docker/sync/offline-sync/src/*"],
      "@dangerprep/eslint-config": ["./packages/eslint-config/src"],
      "@dangerprep/eslint-config/*": ["./packages/eslint-config/src/*"],
      "@dangerprep/typescript-config": ["./packages/typescript-config/src"],
      "@dangerprep/typescript-config/*": ["./packages/typescript-config/src/*"],
      "@dangerprep/prettier-config": ["./packages/prettier-config/src"],
      "@dangerprep/prettier-config/*": ["./packages/prettier-config/src/*"],
      "@dangerprep/errors": ["./packages/errors/src"],
      "@dangerprep/errors/*": ["./packages/errors/src/*"],
      "@dangerprep/logging": ["./packages/logging/src"],
      "@dangerprep/logging/*": ["./packages/logging/src/*"],
      "@dangerprep/breaker": ["./packages/breaker/src"],
      "@dangerprep/breaker/*": ["./packages/breaker/src/*"],
      "@dangerprep/retry": ["./packages/retry/src"],
      "@dangerprep/retry/*": ["./packages/retry/src/*"],
      "@dangerprep/progress": ["./packages/progress/src"],
      "@dangerprep/progress/*": ["./packages/progress/src/*"],
      "@dangerprep/scheduling": ["./packages/scheduling/src"],
      "@dangerprep/scheduling/*": ["./packages/scheduling/src/*"],
      "@dangerprep/files": ["./packages/files/src"],
      "@dangerprep/files/*": ["./packages/files/src/*"],
      "@dangerprep/notifications": ["./packages/notifications/src"],
      "@dangerprep/notifications/*": ["./packages/notifications/src/*"],
      "@dangerprep/configuration": ["./packages/configuration/src"],
      "@dangerprep/configuration/*": ["./packages/configuration/src/*"],
      "@dangerprep/health": ["./packages/health/src"],
      "@dangerprep/health/*": ["./packages/health/src/*"],
      "@dangerprep/service": ["./packages/service/src"],
      "@dangerprep/service/*": ["./packages/service/src/*"],
      "@dangerprep/config": ["./packages/config/src"],
      "@dangerprep/config/*": ["./packages/config/src/*"],
      "@dangerprep/logging": ["./packages/logging/src"],
      "@dangerprep/logging/*": ["./packages/logging/src/*"],
      "@dangerprep/files": ["./packages/files/src"],
      "@dangerprep/files/*": ["./packages/files/src/*"],
      "@dangerprep/health": ["./packages/health/src"],
      "@dangerprep/health/*": ["./packages/health/src/*"],
      "@dangerprep/notifications": ["./packages/notifications/src"],
      "@dangerprep/notifications/*": ["./packages/notifications/src/*"],
      "@dangerprep/retry": ["./packages/retry/src"],
      "@dangerprep/retry/*": ["./packages/retry/src/*"],
      "@dangerprep/breaker": ["./packages/breaker/src"],
      "@dangerprep/breaker/*": ["./packages/breaker/src/*"],
      "@dangerprep/progress": ["./packages/progress/src"],
      "@dangerprep/progress/*": ["./packages/progress/src/*"],
      "@dangerprep/scheduling": ["./packages/scheduling/src"],
      "@dangerprep/scheduling/*": ["./packages/scheduling/src/*"],
      "@dangerprep/service": ["./packages/service/src"],
      "@dangerprep/service/*": ["./packages/service/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
