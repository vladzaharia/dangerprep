{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DangerPrep Base TypeScript Config",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "ES2022.Error"],
    "module": "Node16",
    "moduleResolution": "Node16",
    
    // Module System
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    
    // Type Checking - Strict Mode
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Type Checking - Advanced
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    
    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    
    // Interop Constraints
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    
    // Completeness
    "skipDefaultLibCheck": true,
    
    // Path Mapping for Workspaces
    "baseUrl": ".",
    "paths": {
      "@dangerprep/cli": ["./cli/src"],
      "@dangerprep/cli/*": ["./cli/src/*"],
      "@dangerprep/shared": ["./shared/src"],
      "@dangerprep/shared/*": ["./shared/src/*"],
      "@dangerprep/kiwix-sync": ["./docker/sync/kiwix-sync/src"],
      "@dangerprep/kiwix-sync/*": ["./docker/sync/kiwix-sync/src/*"],
      "@dangerprep/nfs-sync": ["./docker/sync/nfs-sync/src"],
      "@dangerprep/nfs-sync/*": ["./docker/sync/nfs-sync/src/*"],
      "@dangerprep/offline-sync": ["./docker/sync/offline-sync/src"],
      "@dangerprep/offline-sync/*": ["./docker/sync/offline-sync/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
