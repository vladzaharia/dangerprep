{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD001": true,
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD005": true,
  "MD010": {
    "code_blocks": true,
    "ignore_code_languages": [],
    "spaces_per_tab": 4
  },
  "MD011": true,
  "MD012": {
    "maximum": 1
  },
  "MD018": true,
  "MD019": true,
  "MD020": true,
  "MD021": true,
  "MD023": true,
  "MD024": {
    "siblings_only": false
  },
  "MD025": {
    "level": 1,
    "front_matter_title": "^\\s*title\\s*[:=]"
  },
  "MD026": {
    "punctuation": ".,;:!。，；：！"
  },
  "MD027": true,
  "MD028": true,
  "MD029": {
    "style": "one_or_ordered"
  },
  "MD050": {
    "style": "asterisk"
  },
  "MD053": {
    "ignored_definitions": ["//"]
  },
  "MD007": {
    "indent": 2,
    "start_indented": false,
    "start_indent": 2
  },
  "MD009": {
    "br_spaces": 2,
    "list_item_empty_lines": false,
    "strict": false
  },
  "MD013": {
    "line_length": 120,
    "heading_line_length": 120,
    "code_block_line_length": 120,
    "code_blocks": true,
    "tables": true,
    "headings": true,
    "strict": false,
    "stern": false
  },
  "MD022": {
    "lines_above": 1,
    "lines_below": 1
  },
  "MD030": {
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  },
  "MD031": {
    "list_items": true
  },
  "MD032": {
    "lists": true
  },
  "MD033": {
    "allowed_elements": ["br", "sub", "sup", "details", "summary", "img"]
  },
  "MD034": true,
  "MD035": {
    "style": "---"
  },
  "MD036": {
    "punctuation": ".,;:!?。，；：！？"
  },
  "MD037": true,
  "MD038": {
    "code_blocks": true
  },
  "MD039": true,
  "MD040": {
    "allowed_languages": [],
    "language_only": false
  },
  "MD041": {
    "level": 1,
    "front_matter_title": "^\\s*title\\s*[:=]"
  },
  "MD042": true,
  "MD043": false,
  "MD044": {
    "names": ["JavaScript", "TypeScript", "Docker", "GitHub", "API", "URL", "HTTP", "HTTPS", "JSON", "YAML", "XML", "HTML", "CSS", "SQL", "CLI", "UI", "UX"],
    "code_blocks": true,
    "html_elements": true
  },
  "MD045": true,
  "MD046": {
    "style": "fenced"
  },
  "MD047": true,
  "MD048": {
    "style": "backtick"
  },
  "MD049": {
    "style": "asterisk"
  },
  "MD051": true,
  "MD052": true,
  "MD054": {
    "autolink": true,
    "inline": true,
    "full": true,
    "collapsed": true,
    "shortcut": true,
    "url_inline": true
  },
  "MD055": {
    "style": "leading_and_trailing"
  },
  "MD056": {
    "style": "leading_and_trailing"
  },
  "MD058": {
    "style": "leading_and_trailing"
  }
}
