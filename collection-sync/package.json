{
  "name": "media-collection-manager",
  "version": "1.0.0",
  "description": "Modern TypeScript-based media collection management system for portable VOD services",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "media-collection": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },

  "keywords": [
    "media",
    "collection",
    "vod",
    "cli",
    "typescript",
    "nfs",
    "rsync"
  ],
  "author": "Vlad Zaharia <hey@vlad.gg>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "zod": "^3.23.8",
    "csv-writer": "^1.6.0",
    "csv-parser": "^3.0.0",
    "jsonc-parser": "^3.3.1",
    "fuse.js": "^7.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "inquirer": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/fs-extra": "^11.0.4",

    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "rimraf": "^6.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
