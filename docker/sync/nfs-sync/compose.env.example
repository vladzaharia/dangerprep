# =============================================================================
# NFS-SYNC ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Complete configuration options for NFS-Sync service (custom DangerPrep service)
# Manages network file system synchronization with Plex integration

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Installation Root Path
INSTALL_ROOT=${DANGERPREP_INSTALL_ROOT:-/opt/dangerprep}

# Node.js environment
NODE_ENV=production

# Timezone Configuration
TZ={{TZ}}

# User/Group IDs for file permissions
PUID=1337
PGID=1337

# -----------------------------------------------------------------------------
# Core NFS-Sync Configuration
# -----------------------------------------------------------------------------
# Configuration file path
CONFIG_FILE=/app/data/config.yaml

# Data directory
NFS_DATA_DIR=/app/data

# Working directory
NFS_WORK_DIR=/app/work

# -----------------------------------------------------------------------------
# Plex Integration
# -----------------------------------------------------------------------------

# PROMPT[password]: Plex server token - required for Plex integration (get from Plex settings)
PLEX_TOKEN=your-plex-token

# Plex server URL - URL to your Plex server
PLEX_SERVER_URL=http://localhost:32400

# PROMPT: Plex library sections to sync - comma-separated list of library names
PLEX_LIBRARY_SECTIONS=Movies,TV Shows,Music

# Enable Plex library refresh after sync
PLEX_REFRESH_LIBRARY=true

# -----------------------------------------------------------------------------
# NFS Configuration
# -----------------------------------------------------------------------------

# PROMPT: NFS server address - IP address or hostname of your NFS server
NFS_SERVER=192.168.1.100

# NFS mount point
NFS_MOUNT_POINT=/mnt/nfs

# NFS mount options
NFS_MOUNT_OPTIONS=rw,sync,hard,intr

# NFS version (3 or 4)
NFS_VERSION=4

# -----------------------------------------------------------------------------
# Sync Configuration
# -----------------------------------------------------------------------------
# Sync interval (in minutes)
SYNC_INTERVAL=60

# Enable automatic sync on startup
SYNC_ON_STARTUP=true

# Sync direction (pull, push, bidirectional)
SYNC_DIRECTION=pull

# Maximum concurrent sync operations
MAX_CONCURRENT_SYNCS=3

# Sync timeout (in seconds)
SYNC_TIMEOUT=3600

# Enable incremental sync
INCREMENTAL_SYNC=true

# -----------------------------------------------------------------------------
# File Filtering
# -----------------------------------------------------------------------------
# File extensions to include (comma-separated)
INCLUDE_EXTENSIONS=.mkv,.mp4,.avi,.mov,.mp3,.flac,.jpg,.png

# File extensions to exclude (comma-separated)
EXCLUDE_EXTENSIONS=.tmp,.part,.download

# Minimum file size (in MB)
MIN_FILE_SIZE=1

# Maximum file size (in GB)
MAX_FILE_SIZE=50

# Exclude hidden files
EXCLUDE_HIDDEN_FILES=true

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Local storage path
LOCAL_STORAGE_PATH=/data/media

# Temporary directory for sync operations
TEMP_DIR=/tmp/nfs-sync

# Maximum storage usage (in GB)
MAX_STORAGE_GB=1000

# Enable compression for transfers
ENABLE_COMPRESSION=false

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Connection timeout (in seconds)
CONNECTION_TIMEOUT=30

# Read timeout (in seconds)
READ_TIMEOUT=300

# Write timeout (in seconds)
WRITE_TIMEOUT=300

# Retry attempts for failed operations
RETRY_ATTEMPTS=3

# Retry delay (in seconds)
RETRY_DELAY=60

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Log format (text, json)
LOG_FORMAT=text

# Log file path
LOG_FILE=/app/logs/nfs-sync.log

# Enable log rotation
LOG_ROTATION=true

# Maximum log file size (in MB)
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Health Check Configuration
# -----------------------------------------------------------------------------
# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Health check port
HEALTH_CHECK_PORT=8080

# Health check path
HEALTH_CHECK_PATH=/health

# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# Metrics Configuration
# -----------------------------------------------------------------------------
# Enable metrics collection
METRICS_ENABLED=false

# Metrics port
METRICS_PORT=9090

# Metrics path
METRICS_PATH=/metrics

# Metrics collection interval (in seconds)
METRICS_INTERVAL=60

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------
# Enable notifications
NOTIFICATIONS_ENABLED=false

# Notification webhook URL
NOTIFICATION_WEBHOOK_URL=

# Notification events (sync_start, sync_complete, sync_error, file_added, file_removed)
NOTIFICATION_EVENTS=sync_complete,sync_error

# Notification retry attempts
NOTIFICATION_RETRY_ATTEMPTS=3

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# API key for authentication
API_KEY=

# Enable SSL/TLS for connections
SSL_ENABLED=false

# SSL certificate path
SSL_CERT_PATH=

# SSL private key path
SSL_KEY_PATH=

# SSL CA certificate path
SSL_CA_PATH=

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Worker processes
WORKER_PROCESSES=2

# Memory limit (in MB)
MEMORY_LIMIT=512

# Enable caching
ENABLE_CACHING=true

# Cache directory
CACHE_DIR=/app/cache

# Cache TTL (in seconds)
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# Enable bandwidth limiting (in KB/s)
BANDWIDTH_LIMIT=0

# Enable file integrity checking
INTEGRITY_CHECK=true

# Checksum algorithm (md5, sha1, sha256)
CHECKSUM_ALGORITHM=sha256

# Enable deduplication
ENABLE_DEDUPLICATION=false

# -----------------------------------------------------------------------------
# Development/Debug Configuration
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Dry run mode (don't actually sync files)
DRY_RUN=false

# Test mode
TEST_MODE=false

# Enable profiling
ENABLE_PROFILING=false
