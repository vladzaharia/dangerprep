{
  "name": "@dangerprep/nfs-sync",
  "version": "1.0.0",
  "description": "DangerPrep Content Synchronization Service",
  "private": true,
  "main": "dist/engine.js",
  "types": "dist/engine.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/engine.js",
    "dev": "npx tsx src/engine.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@dangerprep/configuration": "workspace:*",
    "@dangerprep/files": "workspace:*",
    "@dangerprep/health": "workspace:*",
    "@dangerprep/logging": "workspace:*",
    "@dangerprep/notifications": "workspace:*",
    "@dangerprep/scheduling": "workspace:*",
    "@dangerprep/service": "workspace:*",
    "@dangerprep/sync": "workspace:*",
    "axios": "^1.11.0",
    "fast-xml-parser": "^5.2.5",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.0.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
