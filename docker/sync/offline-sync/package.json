{
  "name": "@dangerprep/offline-sync",
  "version": "1.0.0",
  "description": "DangerPrep Offline MicroSD Card Synchronization Service",
  "private": true,
  "main": "dist/engine.js",
  "types": "dist/engine.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/engine.js",
    "dev": "npx tsx src/engine.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:up:build": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@dangerprep/sync": "workspace:*",
    "fs-extra": "^11.3.0",
    "tslib": "^2.8.1",
    "usb": "^2.16.0"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
