{
  "name": "@dangerprep/offline-sync",
  "version": "1.0.0",
  "description": "DangerPrep Offline MicroSD Card Synchronization Service",
  "private": true,
  "main": "dist/engine.js",
  "types": "dist/engine.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/engine.js",
    "dev": "ts-node src/engine.ts",
    "cli": "node dist/cli.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@dangerprep/shared": "workspace:*",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.2",
    "usb": "^2.16.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.14.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
