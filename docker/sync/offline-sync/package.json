{
  "name": "@dangerprep/offline-sync",
  "version": "1.0.0",
  "description": "DangerPrep Offline MicroSD Card Synchronization Service",
  "private": true,
  "main": "dist/engine.js",
  "types": "dist/engine.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/engine.js",
    "dev": "npx tsx src/engine.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@dangerprep/sync": "workspace:*"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
