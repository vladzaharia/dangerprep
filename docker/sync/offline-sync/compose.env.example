# =============================================================================
# OFFLINE-SYNC ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Complete configuration options for Offline-Sync service (custom DangerPrep service)
# Manages offline MicroSD card synchronization with auto-detection

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Installation Root Path
INSTALL_ROOT=${DANGERPREP_INSTALL_ROOT:-/opt/dangerprep}

# Node.js environment
NODE_ENV=production

# Timezone Configuration
TZ={{TZ}}

# User/Group IDs for file permissions
PUID=1337
PGID=1337

# -----------------------------------------------------------------------------
# Core Offline-Sync Configuration
# -----------------------------------------------------------------------------
# Configuration file path
CONFIG_FILE=/app/data/config.yaml

# Data directory
OFFLINE_DATA_DIR=/app/data

# Working directory
OFFLINE_WORK_DIR=/app/work

# -----------------------------------------------------------------------------
# MicroSD Card Detection
# -----------------------------------------------------------------------------
# Device detection interval (in seconds)
DEVICE_SCAN_INTERVAL=5

# Supported filesystems (comma-separated)
SUPPORTED_FILESYSTEMS=fat32,exfat,ext4,ntfs

# Minimum card size (in MB)
MIN_CARD_SIZE=128

# Maximum card size (in GB)
MAX_CARD_SIZE=1024

# Auto-mount detected cards
AUTO_MOUNT=true

# Mount point base directory
MOUNT_BASE_DIR=/mnt/cards

# -----------------------------------------------------------------------------
# Sync Configuration
# -----------------------------------------------------------------------------
# Enable automatic sync on card insertion
AUTO_SYNC_ON_INSERT=true

# Sync timeout (in seconds)
SYNC_TIMEOUT=7200

# Maximum concurrent sync operations
MAX_CONCURRENT_SYNCS=1

# Enable resume capability for interrupted syncs
ENABLE_RESUME=true

# Resume chunk size (in MB)
RESUME_CHUNK_SIZE=10

# Verify files after sync
VERIFY_AFTER_SYNC=true

# -----------------------------------------------------------------------------
# Content Selection
# -----------------------------------------------------------------------------
# Content categories to sync (comma-separated)
SYNC_CATEGORIES=essential,educational,entertainment,maps

# Essential content (always synced)
ESSENTIAL_CONTENT=wikipedia,medical,survival

# Educational content
EDUCATIONAL_CONTENT=khan-academy,coursera,textbooks

# Entertainment content
ENTERTAINMENT_CONTENT=movies,music,games

# Maps and navigation
MAPS_CONTENT=offline-maps,gps-data

# -----------------------------------------------------------------------------
# File Management
# -----------------------------------------------------------------------------
# Create directory structure on card
CREATE_DIRECTORY_STRUCTURE=true

# Directory structure template
DIRECTORY_TEMPLATE=/DangerPrep/{category}/{subcategory}

# File naming convention
FILE_NAMING_CONVENTION=original

# Enable file compression
ENABLE_COMPRESSION=false

# Compression level (1-9)
COMPRESSION_LEVEL=6

# -----------------------------------------------------------------------------
# Storage Management
# -----------------------------------------------------------------------------
# Source data directory
SOURCE_DATA_DIR=/data/offline-content

# Temporary directory for sync operations
TEMP_DIR=/tmp/offline-sync

# Enable space optimization
OPTIMIZE_SPACE=true

# Minimum free space to maintain (in MB)
MIN_FREE_SPACE=100

# Enable duplicate detection
DETECT_DUPLICATES=true

# -----------------------------------------------------------------------------
# Progress Tracking
# -----------------------------------------------------------------------------
# Enable progress tracking
PROGRESS_TRACKING=true

# Progress update interval (in seconds)
PROGRESS_UPDATE_INTERVAL=5

# Progress file path
PROGRESS_FILE=/app/data/progress.json

# Enable ETA calculation
CALCULATE_ETA=true

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Enable network sync (for updates)
NETWORK_SYNC_ENABLED=false

# Network sync URL
NETWORK_SYNC_URL=https://sync.dangerprep.local

# Network timeout (in seconds)
NETWORK_TIMEOUT=30

# Enable proxy support
HTTP_PROXY=
HTTPS_PROXY=

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Log format (text, json)
LOG_FORMAT=text

# Log file path
LOG_FILE=/app/logs/offline-sync.log

# Enable log rotation
LOG_ROTATION=true

# Maximum log file size (in MB)
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# Log sync operations to card
LOG_TO_CARD=true

# -----------------------------------------------------------------------------
# Health Check Configuration
# -----------------------------------------------------------------------------
# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Health check port
HEALTH_CHECK_PORT=8080

# Health check path
HEALTH_CHECK_PATH=/health

# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# Metrics Configuration
# -----------------------------------------------------------------------------
# Enable metrics collection
METRICS_ENABLED=false

# Metrics port
METRICS_PORT=9090

# Metrics path
METRICS_PATH=/metrics

# Track sync statistics
TRACK_SYNC_STATS=true

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------
# Enable notifications
NOTIFICATIONS_ENABLED=false

# Notification webhook URL
NOTIFICATION_WEBHOOK_URL=

# Notification events (card_inserted, card_removed, sync_start, sync_complete, sync_error)
NOTIFICATION_EVENTS=card_inserted,sync_complete,sync_error

# LED indicator support (for hardware with LEDs)
LED_INDICATOR_ENABLED=false

# Buzzer support (for hardware with buzzer)
BUZZER_ENABLED=false

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Enable encryption for sensitive data
ENABLE_ENCRYPTION=false

# Encryption key file
ENCRYPTION_KEY_FILE=/app/keys/encryption.key

# Enable card verification
VERIFY_CARD_INTEGRITY=true

# Scan for malware (if antivirus available)
MALWARE_SCAN=false

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Worker threads for file operations
WORKER_THREADS=2

# Memory limit (in MB)
MEMORY_LIMIT=512

# I/O buffer size (in KB)
IO_BUFFER_SIZE=64

# Enable caching
ENABLE_CACHING=true

# Cache directory
CACHE_DIR=/app/cache

# Cache size limit (in MB)
CACHE_SIZE_LIMIT=100

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# Enable bandwidth limiting (in KB/s)
BANDWIDTH_LIMIT=0

# Enable file integrity checking
INTEGRITY_CHECK=true

# Checksum algorithm (md5, sha1, sha256)
CHECKSUM_ALGORITHM=sha256

# Enable metadata preservation
PRESERVE_METADATA=true

# Custom sync scripts directory
CUSTOM_SCRIPTS_DIR=/app/scripts

# -----------------------------------------------------------------------------
# Development/Debug Configuration
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Dry run mode (don't actually sync files)
DRY_RUN=false

# Test mode (use virtual cards)
TEST_MODE=false

# Simulate card insertion (for testing)
SIMULATE_CARD_INSERT=false
