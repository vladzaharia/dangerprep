{
  "name": "@dangerprep/sync-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for DangerPrep sync services standardized architecture",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@dangerprep/sync": "workspace:*"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "../*/src/**/*.ts",
      "!../*/src/**/*.d.ts"
    ]
  }
}
