# =============================================================================
# PORTAINER ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Complete configuration options for Portainer Docker management interface
# Note: Portainer has limited environment variable support
# Most configuration is done through the web interface

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Installation Root Path
INSTALL_ROOT=${DANGERPREP_INSTALL_ROOT:-/opt/dangerprep}

# Timezone Configuration
TZ=America/Los_Angeles

# User/Group IDs for file permissions
PUID=1000
PGID=1000

# -----------------------------------------------------------------------------
# Portainer Configuration
# -----------------------------------------------------------------------------
# Note: Portainer does not support extensive environment variable configuration
# Most settings are configured through the web interface after initial setup

# Admin password (only used for initial setup)
PORTAINER_ADMIN_PASSWORD=your-secure-password-here

# Hide specific Docker labels in the UI
PORTAINER_HIDE_LABELS=com.docker.compose.project,com.docker.compose.service

# Enable edge compute features
PORTAINER_EDGE_COMPUTE=false

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# HTTP port (default: 9000)
PORTAINER_HTTP_PORT=9000

# HTTPS port (default: 9443)
PORTAINER_HTTPS_PORT=9443

# Bind address
PORTAINER_BIND_ADDRESS=0.0.0.0

# -----------------------------------------------------------------------------
# SSL/TLS Configuration
# -----------------------------------------------------------------------------
# Enable HTTPS
PORTAINER_SSL=false

# SSL certificate path
PORTAINER_SSL_CERT=/certs/portainer.crt

# SSL private key path
PORTAINER_SSL_KEY=/certs/portainer.key

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Session timeout (in minutes)
PORTAINER_SESSION_TIMEOUT=480

# Enable internal authentication
PORTAINER_INTERNAL_AUTH=true

# LDAP configuration (configured via web interface)
PORTAINER_LDAP_ENABLED=false

# OAuth configuration (configured via web interface)
PORTAINER_OAUTH_ENABLED=false

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Data directory (where Portainer stores its database)
PORTAINER_DATA_DIR=/data

# Database file name
PORTAINER_DATABASE_FILE=portainer.db

# Enable database encryption
PORTAINER_DATABASE_ENCRYPTION=false

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# Docker endpoint URL
DOCKER_HOST=unix:///var/run/docker.sock

# Docker API version
DOCKER_API_VERSION=1.41

# Enable Docker host management
PORTAINER_HOST_MANAGEMENT=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARN, ERROR)
PORTAINER_LOG_LEVEL=INFO

# Log format (text, json)
PORTAINER_LOG_FORMAT=text

# Enable access logs
PORTAINER_ACCESS_LOG=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable beta features
PORTAINER_BETA_FEATURES=false

# Enable experimental features
PORTAINER_EXPERIMENTAL_FEATURES=false

# Hide specific containers
PORTAINER_HIDE_CONTAINERS=portainer,watchtower

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Enable security scanning
PORTAINER_SECURITY_SCANNING=false

# Disable privileged mode
PORTAINER_DISABLE_PRIVILEGED=false

# Enable audit logging
PORTAINER_AUDIT_LOG=false

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Enable caching
PORTAINER_CACHE_ENABLED=true

# Cache timeout (in seconds)
PORTAINER_CACHE_TIMEOUT=300

# Maximum memory usage (in MB)
PORTAINER_MAX_MEMORY=512

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# Custom logo URL
PORTAINER_LOGO_URL=

# Custom CSS
PORTAINER_CUSTOM_CSS=

# Enable telemetry
PORTAINER_TELEMETRY=true

# Snapshot interval (in seconds)
PORTAINER_SNAPSHOT_INTERVAL=300

# -----------------------------------------------------------------------------
# Development/Debug Configuration
# -----------------------------------------------------------------------------
# Enable debug mode
PORTAINER_DEBUG=false

# Enable verbose logging
PORTAINER_VERBOSE=false

# Development mode
PORTAINER_DEV_MODE=false
