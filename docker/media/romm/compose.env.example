# =============================================================================
# ROMM ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Complete configuration options for RomM retro games library manager
# Reference: https://docs.romm.app/latest/Getting-Started/Environment-Variables/

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Installation Root Path
INSTALL_ROOT=${DANGERPREP_INSTALL_ROOT:-/opt/dangerprep}

# Timezone Configuration
TZ=America/Los_Angeles

# -----------------------------------------------------------------------------
# Application Settings (Required)
# -----------------------------------------------------------------------------
# Authentication secret key (REQUIRED) - AUTO-GENERATED by setup script
# This value will be automatically generated during deployment
ROMM_AUTH_SECRET_KEY=

# Disable CSRF protection (not recommended)
DISABLE_CSRF_PROTECTION=false

# Disable auth on download endpoint (for WebRcade, Tinfoil)
DISABLE_DOWNLOAD_ENDPOINT_AUTH=false

# Disable username/password login (when using OIDC)
DISABLE_USERPASS_LOGIN=false

# Session maximum age in seconds (default: 1209600 = 14 days)
SESSION_MAX_AGE_SECONDS=1209600

# Kiosk mode (read-only for public displays)
KIOSK_MODE=false

# Upload timeout in seconds
UPLOAD_TIMEOUT=600

# Scan timeout in seconds
SCAN_TIMEOUT=14400

# Disable EmulatorJS (browser gaming)
DISABLE_EMULATOR_JS=false

# Disable RuffleRS (Flash games)
DISABLE_RUFFLE_RS=false

# YouTube base URL (for alternate frontends like Piped, Invidious)
YOUTUBE_BASE_URL=https://www.youtube.com

# Number of processes running the app
WEB_CONCURRENCY=2

# Port on which the application listens
ROMM_PORT=8080

# Base folder path for library, resources and assets
ROMM_BASE_PATH=/romm

# Base URL for properly displaying container log links
ROMM_BASE_URL=0.0.0.0

# Logging level (TRACE, DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGLEVEL=INFO

# Force color output
FORCE_COLOR=false

# Disable color output
NO_COLOR=false

# -----------------------------------------------------------------------------
# Dependencies Configuration
# -----------------------------------------------------------------------------
# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=romm
DB_USER=romm_user
# Database password - AUTO-GENERATED by setup script
DB_PASSWD=
ROMM_DB_DRIVER=mariadb

# Redis/Valkey Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
# Redis password - AUTO-GENERATED by setup script
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Sentry error tracking
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Metadata Providers Configuration
# -----------------------------------------------------------------------------
# IGDB API (Internet Game Database)
# Get your API keys from https://api.igdb.com/
IGDB_CLIENT_ID=your-igdb-client-id
IGDB_CLIENT_SECRET=your-igdb-client-secret

# Screenscraper
SCREENSCRAPER_USER=your-screenscraper-username
SCREENSCRAPER_PASSWORD=your-screenscraper-password

# MobyGames
MOBYGAMES_API_KEY=your-mobygames-api-key

# SteamGridDB
STEAMGRIDDB_API_KEY=your-steamgriddb-api-key

# RetroAchievements
RETROACHIEVEMENTS_API_KEY=your-retroachievements-api-key
REFRESH_RETROACHIEVEMENTS_CACHE_DAYS=30

# LaunchBox API
LAUNCHBOX_API_ENABLED=false

# PlayMatch API
PLAYMATCH_API_ENABLED=false

# Hasheous API
HASHEOUS_API_ENABLED=false

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# OpenID Connect (OIDC) Authentication
OIDC_ENABLED=false
OIDC_PROVIDER=your-oidc-provider-name
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret
OIDC_REDIRECT_URI=https://romm.yourdomain.com/auth/callback
OIDC_SERVER_APPLICATION_URL=https://your-oidc-server.com
OIDC_TLS_CACERTFILE=/path/to/ca-certificates.crt

# -----------------------------------------------------------------------------
# Background Tasks Configuration
# -----------------------------------------------------------------------------
# Enable re-scanning on filesystem changes
ENABLE_RESCAN_ON_FILESYSTEM_CHANGE=false

# Delay before re-scanning (in minutes)
RESCAN_ON_FILESYSTEM_CHANGE_DELAY=5

# Enable scheduled re-scanning
ENABLE_SCHEDULED_RESCAN=false

# Scheduled re-scan cron expression (default: 3 AM daily)
SCHEDULED_RESCAN_CRON="0 3 * * *"

# Enable scheduled Switch TitleDB updates
ENABLE_SCHEDULED_UPDATE_SWITCH_TITLEDB=false

# Switch TitleDB update cron expression (default: 4 AM daily)
SCHEDULED_UPDATE_SWITCH_TITLEDB_CRON="0 4 * * *"

# Enable scheduled LaunchBox metadata updates
ENABLE_SCHEDULED_UPDATE_LAUNCHBOX_METADATA=false

# LaunchBox metadata update cron expression (default: 5 AM daily)
SCHEDULED_UPDATE_LAUNCHBOX_METADATA_CRON="0 5 * * *"

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Enable development mode (debugging, hot-reloading)
DEV_MODE=false

# Development server host
DEV_HOST=localhost

# Development server port
DEV_PORT=5000

# Enable SQL query logging in development
DEV_SQL_ECHO=false

# -----------------------------------------------------------------------------
# Security Configuration (File-based secrets)
# -----------------------------------------------------------------------------
# Use these for Docker secrets or file-based configuration
ROMM_AUTH_SECRET_KEY_FILE=/run/secrets/romm_auth_secret_key
DB_PASSWD_FILE=/run/secrets/db_password
REDIS_PASSWORD_FILE=/run/secrets/redis_password
IGDB_CLIENT_SECRET_FILE=/run/secrets/igdb_client_secret
OIDC_CLIENT_SECRET_FILE=/run/secrets/oidc_client_secret
