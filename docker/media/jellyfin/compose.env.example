# =============================================================================
# JELLYFIN ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Complete configuration options for Jellyfin media server
# Reference: https://jellyfin.org/docs/general/administration/configuration/

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Installation Root Path
INSTALL_ROOT=${DANGERPREP_INSTALL_ROOT:-/opt/dangerprep}

# Timezone Configuration (affects scheduling and logs)
TZ=America/Los_Angeles

# User/Group IDs for file permissions (useful for Docker)
PUID=1000
PGID=1000

# -----------------------------------------------------------------------------
# Core Jellyfin Configuration
# -----------------------------------------------------------------------------

# PROMPT: Published Server URL - how clients should connect to your Jellyfin server
JELLYFIN_PublishedServerUrl=https://jellyfin.danger

# PROMPT: Server name - displayed in Jellyfin clients and apps
JELLYFIN_ServerName=DangerPrep Media Server

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# HTTP port (default: 8096)
JELLYFIN_HttpServerPortNumber=8096

# HTTPS port (default: 8920)
JELLYFIN_HttpsPortNumber=8920

# Public HTTP port (for external access)
JELLYFIN_PublicHttpsPort=443

# Public HTTPS port (for external access)
JELLYFIN_PublicPort=80

# Enable HTTPS
JELLYFIN_EnableHttps=false

# Certificate path (if using HTTPS)
JELLYFIN_CertificatePath=/config/cert.pfx

# GENERATE[16]: Certificate password for HTTPS certificate
JELLYFIN_CertificatePassword=change_me_cert_password

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Require HTTPS for external connections
JELLYFIN_RequireHttps=false

# Enable remote connections
JELLYFIN_EnableRemoteAccess=true

# Enable UPnP (for automatic port forwarding)
JELLYFIN_EnableUPnP=false

# Enable metrics collection
JELLYFIN_EnableMetrics=false

# -----------------------------------------------------------------------------
# Media Library Configuration
# -----------------------------------------------------------------------------
# Enable real-time monitoring of media folders
JELLYFIN_EnableLibraryMonitor=true

# Library scan delay (in seconds)
JELLYFIN_LibraryMonitorDelay=60

# Enable automatic library updates
JELLYFIN_EnableAutomaticRestart=true

# -----------------------------------------------------------------------------
# Transcoding Configuration
# -----------------------------------------------------------------------------
# Hardware acceleration method (none, vaapi, nvenc, qsv, amf, videotoolbox)
JELLYFIN_HardwareAccelerationType=none

# Enable hardware decoding
JELLYFIN_EnableHardwareDecoding=false

# Enable hardware encoding
JELLYFIN_EnableHardwareEncoding=false

# Transcoding temporary path
JELLYFIN_TranscodingTempPath=/config/transcoding-temp

# Enable tone mapping for HDR content
JELLYFIN_EnableTonemapping=false

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (Trace, Debug, Information, Warning, Error, Critical)
JELLYFIN_LogLevel=Information

# Log directory
JELLYFIN_LogDir=/config/log

# Enable file logging
JELLYFIN_EnableFileLogging=true

# Log file retention days
JELLYFIN_LogFileRetentionDays=3

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database path
JELLYFIN_DatabasePath=/config/data

# Cache directory
JELLYFIN_CachePath=/config/cache

# Metadata path
JELLYFIN_MetadataPath=/config/metadata

# -----------------------------------------------------------------------------
# Plugin Configuration
# -----------------------------------------------------------------------------
# Plugin repository URLs (comma-separated)
JELLYFIN_PluginRepositories=https://repo.jellyfin.org/releases/plugin/manifest-stable.json

# Enable plugin security
JELLYFIN_EnablePluginSecurity=true

# -----------------------------------------------------------------------------
# DLNA Configuration
# -----------------------------------------------------------------------------
# Enable DLNA server
JELLYFIN_EnableDlnaServer=true

# Enable DLNA play to
JELLYFIN_EnableDlnaPlayTo=true

# DLNA server port
JELLYFIN_DlnaServerPort=1900

# -----------------------------------------------------------------------------
# Live TV Configuration
# -----------------------------------------------------------------------------
# Enable Live TV
JELLYFIN_EnableLiveTv=false

# Live TV guide days
JELLYFIN_LiveTvGuideDays=7

# Record path for Live TV
JELLYFIN_RecordingPath=/media/recordings

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------
# Enable notifications
JELLYFIN_EnableNotifications=true

# Notification level (None, Error, Warning, Info)
JELLYFIN_NotificationLevel=Info

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Enable parallel processing
JELLYFIN_EnableParallelProcessing=true

# Max parallel processes
JELLYFIN_MaxParallelProcesses=0

# Enable memory mapping
JELLYFIN_EnableMemoryMapping=false

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# Enable beta features
JELLYFIN_EnableBetaFeatures=false

# Enable experimental features
JELLYFIN_EnableExperimentalFeatures=false

# Custom CSS path
JELLYFIN_CustomCssPath=

# Branding options
JELLYFIN_LoginDisclaimer=
JELLYFIN_CustomCss=

# -----------------------------------------------------------------------------
# Development/Debug Configuration
# -----------------------------------------------------------------------------
# Enable debug logging
JELLYFIN_EnableDebugLogging=false

# Enable SQL logging
JELLYFIN_EnableSqlLogging=false

# Enable performance logging
JELLYFIN_EnablePerformanceLogging=false
