# Mali GPU configuration for RK3588/RK3588S
# Environment variables and settings for optimal GPU performance

# Mali GPU driver configuration
MALI_OPENCL_DEVICE_TYPE=gpu
MALI_DUAL_MODE_COMPUTE=1
MALI_DEBUG=0
MALI_FPS=1

# OpenGL ES configuration
MESA_GL_VERSION_OVERRIDE=3.3
MESA_GLSL_VERSION_OVERRIDE=330

# Vulkan configuration
VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/mali_icd.json

# Hardware video acceleration
GST_PLUGIN_PATH=/usr/lib/aarch64-linux-gnu/gstreamer-1.0
LIBVA_DRIVER_NAME=rockchip
VDPAU_DRIVER=rockchip

# Performance tuning
MALI_GPU_UTILIZATION_TIMEOUT=1000
MALI_GPU_FREQ_LOCK=0
