# DangerPrep WiFi Hotspot Configuration

# Interface and driver
interface={{WIFI_INTERFACE}}
driver=nl80211

# Network settings
ssid={{WIFI_SSID}}
hw_mode=g
channel=6
country_code=US

# Security settings
auth_algs=1
wpa=2
wpa_key_mgmt=WPA-PSK
wpa_passphrase={{WIFI_PASSWORD}}
rsn_pairwise=CCMP

# WPA3 support (if available)
wpa_key_mgmt=WPA-PSK WPA-PSK-SHA256 SAE
ieee80211w=2
sae_require_mfp=1

# Performance and compatibility
wmm_enabled=1
ht_capab=[HT40][SHORT-GI-20][SHORT-GI-40]
ieee80211n=1

# Client isolation for security
ap_isolate=1

# Logging
logger_syslog=-1
logger_syslog_level=2
logger_stdout=-1
logger_stdout_level=2

# Additional security
ignore_broadcast_ssid=0
macaddr_acl=0
