{
  "name": "@dangerprep/configuration",
  "description": "Configuration management with YAML support and Zod validation for DangerPrep services",
  "version": "1.0.0",
  "dependencies": {
    "@dangerprep/files": "workspace:*",
    "@dangerprep/logging": "workspace:*",
    "js-yaml": "^4.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "configuration",
    "dangerprep",
    "typescript",
    "validation",
    "yaml",
    "zod"
  ],
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  }
}
