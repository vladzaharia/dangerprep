{
  "name": "@dangerprep/resilience",
  "description": "Comprehensive resilience patterns including circuit breakers, retry mechanisms, and fault tolerance for DangerPrep services",
  "version": "1.0.0",
  "dependencies": {
    "@dangerprep/common": "workspace:*",
    "@dangerprep/errors": "workspace:*"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./circuit-breaker": {
      "types": "./dist/circuit-breaker.d.ts",
      "default": "./dist/circuit-breaker.js"
    },
    "./retry": {
      "types": "./dist/retry.d.ts",
      "default": "./dist/retry.js"
    },
    "./patterns": {
      "types": "./dist/patterns.d.ts",
      "default": "./dist/patterns.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "circuit-breaker",
    "dangerprep",
    "exponential-backoff",
    "fault-tolerance",
    "jitter",
    "resilience",
    "retry",
    "typescript"
  ],
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  }
}
