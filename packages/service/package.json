{
  "name": "@dangerprep/service",
  "description": "Service base class for standardized lifecycle management in DangerPrep services",
  "version": "1.0.0",
  "dependencies": {
    "@dangerprep/configuration": "workspace:*",
    "@dangerprep/health": "workspace:*",
    "@dangerprep/logging": "workspace:*",
    "@dangerprep/notifications": "workspace:*",
    "@dangerprep/scheduling": "workspace:*",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "zod": "^4.0.15"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "base-class",
    "dangerprep",
    "lifecycle",
    "service",
    "typescript"
  ],
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit"
  }
}
