{
  "name": "@dangerprep/logging",
  "description": "Modern structured logging for DangerPrep services",
  "version": "1.0.0",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "dangerprep",
    "logging",
    "structured-logging",
    "typescript",
    "winston"
  ],
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit"
  }
}
