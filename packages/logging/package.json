{
  "name": "@dangerprep/logging",
  "version": "1.0.0",
  "description": "Modern structured logging for DangerPrep services",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "logging",
    "winston",
    "structured-logging",
    "typescript",
    "dangerprep"
  ],
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
