{
  "name": "@dangerprep/common",
  "version": "1.0.0",
  "description": "Shared utilities and patterns for DangerPrep packages",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./branded-types": {
      "types": "./dist/branded-types.d.ts",
      "default": "./dist/branded-types.js"
    },
    "./size-utils": {
      "types": "./dist/size-utils.d.ts",
      "default": "./dist/size-utils.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "default": "./dist/validation.js"
    },
    "./patterns": {
      "types": "./dist/patterns.d.ts",
      "default": "./dist/patterns.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@dangerprep/errors": "workspace:*"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/node": "^24.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "utilities",
    "common",
    "shared",
    "patterns",
    "typescript",
    "dangerprep"
  ]
}
