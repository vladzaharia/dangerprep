{
  "name": "@dangerprep/sync",
  "description": "DangerPrep Shared Sync Framework",
  "version": "1.0.0",
  "dependencies": {
    "@dangerprep/configuration": "workspace:*",
    "@dangerprep/errors": "workspace:*",
    "@dangerprep/files": "workspace:*",
    "@dangerprep/health": "workspace:*",
    "@dangerprep/logging": "workspace:*",
    "@dangerprep/notifications": "workspace:*",
    "@dangerprep/progress": "workspace:*",
    "@dangerprep/resilience": "workspace:*",
    "@dangerprep/service": "workspace:*",
    "@dangerprep/types": "workspace:*",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@dangerprep/typescript": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.0.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "types": "dist/index.d.ts"
}
